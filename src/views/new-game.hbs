
<div class="mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h2>New Game</h2>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-row m-2">
                    <label for="title" class="col-form-label"><h6>Title: </h6></label>
                    <input type="text" name="title" class="col-5 form-control" placeholder="Please write a title..." required autofocus>
                    <div class="col-6">
                        <label for="date" class="col-form-label"><h6>Realase: </h6></label>
                        <input type="date" class="rounded"  name="date" min="1920-01-01" max="2021-01-01" required>
                    </div>
                </div>
                <div class="form-row m-2">
                    <textarea name="description" class="form-control" cols="40" rows="5" placeholder="Description" required></textarea>
                </div>
                <div class="form-group">
                    <h5>Feactures</h5>
                </div>
                <div class="form group">
                    <label for="platform" class="col-form-label"><h6>Platform(s)</h6></label>
                    <select name="platform" class="selectpicker" multiple data-live-search="true">
                        <option>Mustard</option>
                        <option>Ketchup</option>
                        <option>Relish</option>
                    </select>
                </div>
                <div class="form-row my-2">
                    <div class="col-6">
                        <label for="genre" class="col-form-label"><h6>Genre(s)</h6></label>
                        <select name="genre" class="selectpicker" multiple data-live-search="true">
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="theme" class="col-form-label"><h6>Theme(s)</h6></label>
                        <select name="theme" class="selectpicker" multiple data-live-search="true">
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                        </select>
                    </div>
                </div>
                <div class="form-row my-2">
                    <div class="col-6">
                        <label for="modes" class="col-form-label"><h6>Mode(s)</h6></label>
                        <select name="modes" class="selectpicker" multiple data-live-search="true">
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="perspectives" class="col-form-label"><h6>Perspective(s)</h6></label>
                        <select name="perspectives" class="selectpicker" multiple data-live-search="true">
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                        </select>
                    </div>
                </div>
                <div class="form-row my-2">
                    <div class="custom-file col-6">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose principal image</label>
                        <div class="invalid-feedback">Example invalid custom file feedback</div>
                    </div>
                    <div class="custom-file col-6">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose sencoday image</label>
                        <div class="invalid-feedback">Example invalid custom file feedback</div>
                    </div>
                </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-outline-primary btn-lg"><i class="far fa-paper-plane mr-2"></i>Save</button>
                    </div>
            </form>
        </div>
    </div>
</div>


